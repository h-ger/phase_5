<div class="row">
  <div class="small-7 columns">
    <h3>
      <%= @flavor.name %>
    </h3><br />
    
    <p>
      <b>Active</b>: <%= @flavor.active ? "Yes" : "No" %>
    </p>

  </div>
  <div class="small-5 columns">
    &nbsp;
  </div>
</div>

<!-- Add buttons to list all, edit project or destroy assignment -->
<% if logged_in? && current_user.role == "admin" %>
  <%= render partial: "partials/object_options", locals: {model_name: "flavor", object: @flavor}  %>
<% end %>

<p>
  <h3>Served At</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Store</th>
      </tr>
    </thead>
    <tbody>
      <% @stores_offered.each do |store| %>
        <tr>
          <td><%= link_to store.name, store_path(store) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
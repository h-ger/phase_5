<%= simple_form_for @store_flavor, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Store-Flavor</legend>

    <%= f.input :store_id, :collection => Store.active.alphabetical, :include_blank => true, input_html: {class: "avg"} %>
    <%= f.input :flavor_id, :collection => Flavor.active.alphabetical, :include_blank => true, input_html: {class: "avg"} %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', assignments_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
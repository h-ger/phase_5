<% if jobs.empty? %>
  <p><em>There are no <%= state %> jobs at this time.</em></p>
<% else %>
  <h3><%= state.capitalize %> Jobs</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <% if logged_in? && current_user.role == "admin" %>
          <th>&nbsp;</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% jobs.each do |job| %>
        <tr>
          <td><%= link_to job.name, job_path(job) %></td>
          <td><%= job.description %></td>
          <td>
            <% if logged_in? && current_user.role == "admin" %>
              <%= link_to(edit_job_path(job), class: 'button tiny radius warning') do %>
              &nbsp;Edit&nbsp;
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<p>&nbsp;</p>